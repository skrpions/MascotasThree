<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_perfil_mascota"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/marginTop_Button"
    app:cardCornerRadius="@dimen/corner_radius"
    android:layout_margin="@dimen/margen_general">

    <LinearLayout
        android:id="@+id/lltargeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/purple_500">

        <!-- =========== Start :: Foto ============ -->
        <ImageView
            android:id="@+id/ivFotoPerfilMascotaCv"
            android:layout_width="@dimen/WidthEight_Foto"
            android:layout_height="@dimen/WidthEight_Foto"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/marginTopButton_Foto"
            android:layout_marginBottom="@dimen/marginTopButton_Foto"
            />
        <!-- =========== End :: Foto ============ -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <!-- =========== Start :: Contador ============ -->
                <TextView
                    android:id="@+id/tvContadorPerfilMascotaCv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/size_tvNombre"
                    android:textStyle="normal" />
                <!-- =========== End :: Contador ============ -->


                <!-- =========== Start :: Hueso Yellow ============ -->
                <ImageButton
                    android:id="@+id/btnHuesoYellowPerfilMascotaCv"
                    android:layout_width="@dimen/ancho_huesoyellow"
                    android:layout_height="@dimen/alto_huesoyellow"
                    android:src="@drawable/hueso_yellow_48"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_alignParentRight="true"
                    android:background="@color/white"/>
                <!-- =========== Start :: Hueso Yellow ============ -->

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>